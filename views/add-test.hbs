<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Add Test</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Add test</li>
            </ol>
          </div><!-- /.col -->
          <div class="col-md-12">
            <div style="display: none;" class="alert alert-success"></div>
            <div style="display: none;" class="alert alert-danger"></div>
          </div>
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                  <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title">Enter test details </h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="quickForm">
                      <div class="card-body">
                        <div class="row mb-10" style="margin-bottom:25px;">
                          <div class="col-md-6">
                            <div class="form-group">
                              <label for="">Name</label>
                              <input type="text" name="Name" class="form-control" id="Name" placeholder="" value="{{testData.[0].name}}">
                            </div>
                            <div class="form-group">
                              <label for="">Address</label>
                              <textarea name="Address" id="Address" class="form-control">{{testData.[0].address}}</textarea>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <label for="">Date of Birth</label>
                              <div class="input-group">
                                <div class="input-group-prepend">
                                  <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                                <input type="text" value="{{testData.[0].DOB}}" name="DOB" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                              </div>
                            </div>
                            <div class="form-group">
                              <label for="">Identity Check</label>
                              <div class="clearfix"></div>
                              <div class="icheck-danger d-inline">
                                <input type="radio" name="identity" id="Positive" value="positive" {{checked testData.[0].identity_check "positive"}}>
                                <label for="Positive">
                                  Positive
                                </label>
                              </div>
                              <div class="icheck-info d-inline">
                                <input type="radio" name="identity" id="Negative" value="negative" {{checked testData.[0].identity_check "negative"}}>
                                <label for="Negative">
                                  Negative
                                </label>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-md-6">
                            <div class="form-group">
                              <label for="">Name of the test</label>
                              <input type="text" name="test_name" class="form-control" id="test_name" placeholder="" value="{{testData.[0].test_name}}">
                            </div>
                            <div class="form-group">
                              <label for="">Manufacturer</label>
                              <input type="text" name="manufacturer" class="form-control" id="manufacturer" value="{{testData.[0].manufacturer}}">
                            </div>
                            <div class="form-group">
                              <label for="">Test result</label>
                              <div class="clearfix"></div>
                              <div class="icheck-danger d-inline">
                                <input type="radio" name="test_result" id="result_positive" value="positive" {{checked testData.[0].test_result "positive"}}>
                                <label for="result_positive">
                                  Positive
                                </label>
                              </div>
                              <div class="icheck-info d-inline">
                                <input type="radio" name="test_result" id="result_negative" value="negative" {{checked testData.[0].test_result "negative"}}>
                                <label for="result_negative">
                                  Negative
                                </label>
                              </div>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <label for="">Test date/Test time</label>
                              <div class="input-group date" id="reservationdatetime" data-target-input="nearest">
                                  <input type="text" value="{{testData.[0].test_date_time}}" name="test_date_time" class="form-control datetimepicker-input" data-target="#reservationdatetime"/>
                                  <div class="input-group-append" data-target="#reservationdatetime" data-toggle="datetimepicker">
                                      <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                  </div>
                              </div>
                            </div>
                            <div class="form-group">
                              <label for="">Test carried out by (Name)</label>
                              <input type="text" value="{{testData.[0].test_done_by}}" name="test_done_by" class="form-control" id="test_done_by" placeholder="">
                              <input type="hidden" name="data_id" value="{{testData.[0]._id}}">
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- /.card-body -->
                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </div>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </section>
</div>